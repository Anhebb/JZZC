/* 商品详情 */
.product-detail {
  width: 750rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 0rpx 0rpx 32rpx 32rpx;
}
.product-detail-title {
  width: 750rpx;
  box-sizing: border-box;

}
.detail-title-top {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-detail-price {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 30rpx;

}
.product-detail-price label {
  font-size: 40rpx;
  color: red;
}
.detail-title-middle {
  width: 100%;
  box-sizing: border-box;
  padding-left: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-introduct-text {
  width: 65%;
  font-size: 32rpx;
font-weight: 500;

}
.share {
  width: 150rpx;
  height: 60rpx;
  padding-left: 10rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  background-color: #ccc;
}
.detail-title-bottom {
  width: 100%;
  display: flex;
  margin-top: 24rpx;
  justify-content: space-around;

}
.detail-title-bottom label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 24rpx;
}

/* 配送信息 */
.tui-mtop {
  margin-top: 26rpx;
}
.tui-radius-all {
  border-radius: 24rpx;
  overflow: hidden;
}
.tui-list-cell {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  line-height: 26rpx;
  padding: 36rpx 30rpx;
  box-sizing: border-box;
}
.tui-cell-title {
  width: 66rpx;
  padding-right: 30rpx;
  flex-shrink: 0;
}
.tui-right {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.tui-addr-box {
  width: 76%;
}
.tui-list-cell::after {
  content: '';
  position: absolute;
  border-bottom: 1rpx solid #eaeef1;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  bottom: 0;
  right: 0;
  left: 126rpx;
}

.tui-last::after {
  border-bottom: 0 !important;
}

/* 底部浮动按钮 */
.fixed-box {
  width: 750rpx;
  height: 120rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
}
.fixed-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.fixed-item label {
  font-size: 24rpx;
  color: #666;
}
.add-shoppingCar {
  width:200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #c80808;
  color: #fff;
  box-sizing: border-box;
  border-radius: 50rpx;
}
.buy {
  width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff7900;
  color: #fff;
  box-sizing: border-box;
  border-radius: 50rpx;
}

